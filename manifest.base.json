{
    "manifest_version": 3,
    "name": "Leetcode Mastery Scheduler",
    "version": "0.0.3",
    "author": "Hacode",
    "description": "Leetcode-Mastery-Scheduler tracks your LeetCode progress and prompt you to review based FSRS",
    "homepage_url": "https://github.com/xiaohajiayou/Leetcode-Mastery-Scheduler",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false  
    },
    "icons": {
        "128": "assets/bear.png",
        "48": "assets/bear.png",
        "16": "assets/bear.png"
    },
    "action": {
        "default_icon": "assets/bear.png",
        "default_popup": "popup.html"
    },
    "background": {},
    "permissions": [
        "https://leetcode.com/*",
        "https://leetcode.cn/*",
        "unlimitedStorage",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/*"
            ],
            "js": [
                "dist/leetcode.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://leetcode.cn/*"
            ],
            "js": [
                "dist/leetcodecn.js"
            ],
            "run_at": "document_idle"
        }
    ]
}